<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.EditDialog" parent="Theme.MatchParent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">@dimen/fragment_padding</item>
    </style>

    <style name="Theme.EditDialogLabel" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/edit_dialog_label_text_size</item>
    </style>

    <style name="Theme.EditDialogField" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/edit_dialog_field_text_size</item>
    </style>

    <style name="Theme.EditDialogField.Text">
        <item name="android:inputType">text</item>
    </style>

    <style name="Theme.EditDialogField.Text.Bold">
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.EditDialogButtonSet" parent="">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
    </style>

    <style name="Theme.EditDialogButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:layout_width">@dimen/zero_dimen</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginEnd">10dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/design_default_color_primary</item>
        <item name="android:textSize">@dimen/edit_dialog_field_text_size</item>
    </style>

    <style name="Theme.EditTimeLimitDialog" parent="" />

    <style name="Theme.EditTimeLimitDialog.DayText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="Theme.EditTimeLimitDialog.DayText.Desc">
        <item name="android:textSize">@dimen/edit_dialog_label_text_size</item>
        <item name="android:textColor">@color/dark_gray</item>
    </style>

    <style name="Theme.EditTimeLimitDialog.DayText.Field">
        <item name="android:textSize">@dimen/edit_dialog_field_text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Theme.EditTimeLimitDialog.DayCell">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:padding">5dp</item>
        <item name="android:layout_gravity">fill</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">15dp</item>
    </style>

</resources>