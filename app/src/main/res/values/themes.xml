<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.UseTimeMotivator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.UseTimeMotivator.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.UseTimeMotivator.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="Theme.UseTimeMotivator.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="Theme.CardView" parent="Widget.MaterialComponents.CardView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">70dp</item>
    </style>
    <style name="Theme.CardText" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="Theme.CardTitle" parent="Theme.CardText">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/card_title_text_size</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="Theme.CardDesc" parent="Theme.CardText">
        <item name="android:textColor">@color/dark_gray</item>
        <item name="android:textSize">@dimen/card_desc_text_size</item>
        <item name="android:layout_marginStart">@dimen/card_desc_margin_start</item>
    </style>
    <style name="Theme.CardDescDay" parent="Theme.CardDesc">
        <item name="android:layout_marginStart">@dimen/card_desc_day_margin</item>
        <item name="android:layout_gravity">center</item>
    </style>
    <style name="Theme.CardButton" parent="Widget.MaterialComponents.Button">
        <item name="android:layout_width">@dimen/card_button_size</item>
        <item name="minWidth">@dimen/card_button_size</item>
        <item name="android:layout_height">@dimen/card_button_size</item>
        <item name="minHeight">@dimen/card_button_size</item>
        <item name="android:layout_margin">@dimen/card_button_margin</item>
        <item name="android:padding">@dimen/card_button_padding</item>
        <item name="iconPadding">0dp</item>
        <item name="android:insetLeft">@dimen/card_button_inset</item>
        <item name="android:insetRight">@dimen/card_button_inset</item>
        <item name="android:insetTop">@dimen/card_button_inset</item>
        <item name="android:insetBottom">@dimen/card_button_inset</item>
    </style>
    <style name="Theme.CardButtonEdit" parent="Theme.CardButton">
        <item name="icon">@drawable/ic_menu_edit</item>
        <item name="contentDescription">@string/card_button_edit</item>
        <item name="android:layout_weight">0</item>
    </style>
    <style name="Theme.CardButtonRemove" parent="Theme.CardButton">
        <item name="icon">@drawable/ic_menu_trash</item>
        <item name="contentDescription">@string/card_button_remove</item>
        <item name="android:layout_weight">0</item>
    </style>
</resources>