<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.stats.full_stats.DayFullCategoryStatsFragment">

    <TextView
            android:id="@+id/category_in_full_stats_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            android:gravity="center"
            android:text="CATEGORY_LABEL"
    />

    <FrameLayout
            android:id="@+id/full_stats_chart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/category_in_full_stats_label"
            app:layout_constraintBottom_toBottomOf="@id/rule_in_full_stats"
    >
        <com.github.mikephil.charting.charts.BarChart
                android:id="@+id/category_stats_7_day_bar_chart"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                app:layout_constraintTop_toBottomOf="@id/category_in_full_stats_label"
        />
    </FrameLayout>



    <LinearLayout
            android:id="@+id/rule_in_full_stats"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/full_stats_chart"
            android:layout_marginTop="10dp"
    >
        <include
                android:id="@+id/rule_body_in_full_stats"
                layout="@layout/rule_body"
                app:layout_constraintBottom_toBottomOf="parent"
        />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>