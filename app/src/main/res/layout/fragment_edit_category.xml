<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.planning.categorylist.EditCategoryFragment">

    <EditText
            android:id="@+id/dialog_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:text="CATEGORY_NAME"
            android:textAppearance="?android:attr/textAppearanceLarge">
    </EditText>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/category_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_margin="20dp"
                android:text="RULE:"
                android:textAppearance="?android:attr/textAppearanceLarge">
        </TextView>


        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rule_list_in_category_dialog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                tools:listitem="@layout/rule_in_category_dialog"
                tools:itemCount="4"
        />

    </LinearLayout>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

        <Button
                android:id="@+id/confirm_category_dialog_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="ADD">
        </Button>

        <Button
                android:id="@+id/cancel_category_dialog_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="CANCEL">
        </Button>
    </LinearLayout>

</LinearLayout>